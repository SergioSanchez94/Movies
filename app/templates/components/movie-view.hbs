<div class = "movie-detail">
    <div class="gallery">
        <a href="{{imagen}}">
            <img src="{{imagen}}" alt="Portada {{title}}">
        </a> 
    </div>
    <div class = "movie-information">
        <div class="tituloPelicula">{{title}}</div>
        {{#each 5}}
            <img src="star.png" width="20px" alt="Valoracion {{rating}}">
        {{/each}}
        <p class="datosPelicula">
            Valoracion : {{valoracion}} <br>
            Fecha de estreno: {{date}} <br>
            Duración: {{duration}} <br>
            Género: {{country}} <br>
            Director: {{director}}</p>
        <h4>Sinopsis:</h4>
        <p class="description">{{description}}</p>  
        <div>
            <h4>Calificaciones:</h4>
            {{#each ratings as |Rating index|}}
                <tr class="calification">
                    <td>{{Rating.Source}}: </td>
                    <td><strong>{{Rating.Value}}</strong></td>
                </tr>
            {{/each}}
        </div>
        <br>
    </div>
</div>