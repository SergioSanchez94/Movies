<div class="formBusqueda">
    {{input action="buscar" onkeypress="buscar" value=busqueda placeholder="Buscar..."}}

    <a {{action 'buscar' busqueda}}>
        <button class="busquedaButton">Buscar</button>
    </a>
    <br>
</div>

<table>
    {{#if search}}
        {{#each movies as |Peliculas index|}}
            <tr>
                <td class= "movie">{{movie-view title=Peliculas.Title imagen=Peliculas.Poster description=Peliculas.Plot rating=Peliculas.Rated date=Peliculas.Released duration=Peliculas.Runtime country=Peliculas.Genre director=Peliculas.Director trailer=Peliculas.trailer valoracion=Peliculas.imdbRating ratings=Peliculas.Ratings}}</td>
            </tr>
            <br>
        {{/each}}
    {{else}}
        <h2>No se encontraron resultados.</h2>
    {{/if}}
</table>