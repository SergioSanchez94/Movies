<div class="formBusqueda">
    {{input action="buscar" onkeypress="buscar" value=busqueda placeholder="Buscar..."}}

    <a {{action 'buscar' busqueda}}>
        <button class="busquedaButton">Buscar</button>
    </a>
    <br>
</div>

<table>
    {{#if search}}
        {{#each movies as |Peliculas index|}}
            <tr>
                <td class= "movie">{{movie-view title=Peliculas.title imagen=Peliculas.poster_path description=Peliculas.overview rating=Peliculas.vote_average date=Peliculas.release_date duration=Peliculas.Runtime country=Peliculas.Genre director=Peliculas.Director trailer=Peliculas.trailer valoracion=Peliculas.vote_average ratings=Peliculas.Ratings}}</td>
            </tr>
            <br>
        {{/each}}
    {{else}}
        <h2>No se encontraron resultados.</h2>
    {{/if}}
</table>